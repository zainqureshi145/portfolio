---
import Header from '../components/Header.astro';
export interface Props {
    title?: string;
}
const {title} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css" />
    <title>{title}</title>
  </head>
  <body class="bg-white dark:bg-black">
    <div class="flex flex-row justify-between">
      <div class="mt-3 ml-2 brightness-105 hover:brightness-100">
        <a href="index.html" class="logo">
            <picture>
              <source srcset="/logo/zq-indigo-black-cropped.png" media="(prefers-color-scheme: dark)">
              <img src="/logo/zq-indigo-cropped.png" class="h-20 hidden md:flex">
            </picture>
        </a>
      </div>
      <!-- Toggle Theme -->
        <label id = "toggle" for="check" class="bg-indigo-100 mt-4 mr-4 cursor-pointer relative w-20 h-10 rounded-full">
          <input type="checkbox" id="check" class="sr-only peer">
          <div class="flex flex-row items-center justify-between mt-2 ml-1 mr-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
            </svg>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
            </svg> 
          </div>
          <span class="w-2/5 h-4/5 bg-indigo-300 absolute rounded-full left-1 top-1 peer-checked:bg-indigo-500 peer-checked:left-11 transition-all duration-500">
          </span>
        </label>
             <!-- Toggle Theme -->
    </div>
    <Header />
    <slot />
  </body>
</html>

<script>
  var input = document.getElementById("check");
  input.addEventListener("click", toggleTheme);

  function toggleTheme(){
    console.log('Toggle');
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches) {
          console.log('Light Theme Detected');
      } else if(window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches){
        console.log('Dark Theme Detected');
      }
  }

